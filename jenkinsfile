pipeline {
    agent any
    stages {
        stage('PULL') {
            steps {
                git branch: 'kind', url: 'https://github.com/prasad3936/easycrud.git'
            }
        }

        stage('FRONTEND-DOCKER-BUILD') {
            steps {
                dir('frontend') {
                    sh 'docker build . -t praszp246/easy-frontend:latest'
                }
            }
        }

        stage('BACKEND-DOCKER-BUILD') {
            steps {
                dir('backend') {
                    sh 'docker build . -t praszp246/easy-backend:latest'
                }
            }
        }

        stage('DOCKER-PUSH') {
            steps {
                withCredentials([usernamePassword(credentialsId: '3f6db939-f6bb-496f-87d2-b13ca051c951', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                      echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                      docker push praszp246/easy-frontend:latest
                      docker push praszp246/easy-backend:latest
                      docker logout
                    '''
                }
            }
        }

        stage('DOCKER-CLEAN') {
            steps {
                sh '''
                  docker rmi -f praszp246/easy-frontend:latest || true
                  docker rmi -f praszp246/easy-backend:latest || true
                '''
            }
        }

        stage('DEPLOY') {
            steps {
                sh 'ls -ls && export KUBECONFIG=/var/lib/jenkins/.kube/config && kubectl apply -f yaml/'
            }
        }
    }
}
